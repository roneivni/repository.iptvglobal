<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.video.iptvglobal" name="IPTV Global" version="0.0.1" provider-name="Ronei de Sousa">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="defaut.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <language>en</language>
    <platform>all</platform>
    <summary lang="en">Lista IPTV Global</summary>
    <description lang="en">O Melhor do IPTV</description>
	<platform>all</platform>
  </extension>
</addon>

<addon id="repository.iptvglobal" name="IPTV Global Repo" version="0.0.1" provider-name="Ronei de Sousa">
	<extension point="xbmc.addon.repository" name="IPTV Global Add-on Repository">
		<info compressed="false">http://raw.github.com/roneivni/repository.iptvglobal/master/addons.xml</info>
		<checksum>http://raw.github.com/roneivni/repository.iptvglobal/master/addons.xml.md5</checksum>
		<datadir zip="true">http://raw.github.com/roneivni/repository.iptvglobal/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>IPTV Global Addon</summary>
		<description>Instalador do Addon IPTV Global</description>
		<disclaimer></disclaimer>
		<platform>all</platform>
	</extension>
</addon>
</addons>
